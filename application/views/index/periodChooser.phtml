<div class="period-chooser">
    <select ng-model="interval.select" class="form-control pull-right">
        <option value="all-time">Всё время</option>
        <option value="3-days">3 дня</option>
        <option value="week">Неделя</option>
        <option value="month">Месяц</option>
        <option value="dates">Указать период</option>
    </select>

    <div class="clear"></div>

    <div ng-show="interval.select != 'all-time'" class="date-range" ng-cloak>
        <input type="text"
               ng-click="showDateRange=!showDateRange"
               ng-focus="inputFocus($event)"
               ng-model="periodText"
               class="form-control pull-right">

        <div class="clear"></div>

        <div ng-show="showDateRange"
             date-range
             start="interval.start"
             end="interval.end"
             class="popup-date-range"
             ng-cloak></div>
    </div>
</div>
